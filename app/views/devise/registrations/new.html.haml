.card.card-register.mx-auto.mt-5
  .card-header Take the Pledge
  .card-body
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      .form-group
        %strong Got a Strava account?
        = link_to "Sign up through Strava", user_strava_omniauth_authorize_path, class: 'btn btn-strava btn-block'
      = render "devise/shared/error_messages", resource: resource
      = render partial: 'users/shared/user_fields', locals: { f: f }
      .form-group
        .form-row
          .col-md-6
            = f.label :password
            - if @minimum_password_length
              %em (#{@minimum_password_length} characters minimum)
            = f.password_field :password, autocomplete: 'new-password', class: 'form-control',
              placeholder: 'Password'
          .col-md-6
            = f.label :password_confirmation
            = f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control',
              placeholder: 'Confirm password'
      = f.submit 'Sign up', class: 'btn btn-primary btn-block'

    = render 'devise/shared/links'
