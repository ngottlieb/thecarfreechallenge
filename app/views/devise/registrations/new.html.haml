.card.card-register.mx-auto.mt-5
  .card-header Take the Pledge
  .card-body
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      .form-group
        %strong Got a Strava account?
        = link_to "Sign up through Strava", user_strava_omniauth_authorize_path, class: 'btn btn-strava btn-block'
      = devise_error_messages!
      .form-group
        = f.label :email
        = f.email_field :email, autofocus: true, class: 'form-control',
          placeholder: 'Enter email'
      .form-group
        = f.label :name
        = f.text_field :name, class: 'form-control',
          placeholder: 'Enter name'
      .form-group
        .form-row
          .col-md-6
            = f.label :password
            - if @minimum_password_length
              %em (#{@minimum_password_length} characters minimum)
            = f.password_field :password, autocomplete: 'off', class: 'form-control',
              placeholder: 'Password'
          .col-md-6
            = f.label :password_confirmation
            = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control',
              placeholder: 'Confirm password'
      = f.submit 'Sign up', class: 'btn btn-primary btn-block'

    = render 'devise/shared/links'
